@model Models.ViewModels.SeatVM

@{
    ViewData["Title"] = "Create";
    var flights = ViewData["Flights"] as List<Models.Models.Flight>;
}

<h1>Create</h1>

<h4>Seat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Class" class="control-label"></label>
                <select asp-for="Class" class="form-control" >
                    <option value="" disabled selected>Select Class</option>
                    <option>Business</option>
                    <option>Normal</option>
                    </select>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightID" class="control-label">Flight</label>
                <select asp-for="FlightID" class="form-control">
                    <option value="" disabled selected>Select Flight</option>
                    @foreach (var f in flights)
                    {
                        <option value="@f.FlightId">@f.Name</option>
                    }
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Availability" /> @Html.DisplayNameFor(model => model.Availability)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
