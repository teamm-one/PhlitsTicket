    @model Models.Models.Trip;
@{
    ViewData["Title"] = "Book";
}
<div class="alert alert-success mt-2 fw-bold w-50 mx-auto d-flex align-items-center justify-content-center">
    <h3 class="fw-bold">Book Now..!</h3>
</div>
<div class="row">
    <div class="col-6 justify-content-center mx-auto">
        <table class="table table-striped ps-2 shadow table-bordered table-hover text-start">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>From</th>
                    <th>To</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Airport Name</td>
                    <td>@Model.Airline.AirPortLeave.Name</td>
                    <td>@Model.Airline.AirPortArrive.Name</td>
                </tr>
                <tr>
                    <td>Country</td>
                    <td>@Model.Airline.AirPortLeave.Country</td>
                    <td>@Model.Airline.AirPortArrive.Country</td>
                </tr>
                <tr>
                    <td>City</td>
                    <td>@Model.Airline.AirPortLeave.City</td>
                    <td>@Model.Airline.AirPortArrive.City</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td colspan="2">@Model.Description</td>
                </tr>
                <tr>
                    <td>Leave At</td>
                    <td colspan="2">@Model.LeaveAt</td>
                </tr>
                <tr>
                    <td>Available Seats</td>
                    <td colspan="2">@Model.Flight.Seats.Where(e => e.Availability == true).Count()</td>
                </tr>
                <tr>
                    <td>Ticket Price</td>
                    <td colspan="2">$@Model.Price</td>
                </tr>
            </tbody>
        </table>
        <div class="shadow py-3 px-3  rounded-4 mx-auto">
            <h5 class="text-center">Chose Your Seat Now</h5>
            <div class="mt-3 d-flex justify-content-center gap-5">
                @if (Model.Flight.Seats.Any(e => e.Class == "Business" && e.Availability == true))
                {
                    <a href="/Home/Pay?tripId=@Model.TripId&seat=Business" class="btn btn-primary">Business</a>
                }
                else
                {
                    <a href="/Home/Pay?tripId=@Model.TripId&seat=Business" class="btn btn-primary disabled">Business</a>
                }
                @if (Model.Flight.Seats.Any(e => e.Class == "Normal" && e.Availability == true))
                {
                    <a href="/Home/Pay?tripId=@Model.TripId&seat=Normal" class="btn btn-primary">Normal</a>
                }
                else
                {
                    <a href="/Home/Pay?tripId=@Model.TripId&seat=Normal" class="btn disabled btn-primary">Normal</a>
                }
            </div>
        </div>
    </div>
</div>
</div>
