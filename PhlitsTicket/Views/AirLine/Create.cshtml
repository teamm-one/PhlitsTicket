@model Models.ViewModels.AirlineVM
@{
    ViewData["Title"] = "Create";
    var airports = ViewData["Airports"] as List<Models.Models.Airport>;
}

<h1>Create</h1>

<h4>AirlineVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportLeaveId" class="control-label">airport leave</label>
                <select asp-for="AirportLeaveId" class="form-control">
                    <option value="" disabled selected>Select leave airport</option>
                    @foreach (var airport in airports)
                    {
                        <option value="@airport.AirportId">@airport.Name</option>
                    }
                </select>
                <span asp-validation-for="AirportLeaveId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirPortArriveId" class="control-label">arrive airport</label>
                <select asp-for="AirPortArriveId" class="form-control">
                    <option value="" disabled selected>Select arrive airport</option>
                    @foreach (var airport in airports)
                    {
                        <option value="@airport.AirportId">@airport.Name</option>
                    }
                </select>
                <span asp-validation-for="AirPortArriveId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
