@model Models.ViewModels.AirlineVM

@{
    ViewData["Title"] = "Details";
    var airports = ViewData["Airports"]as List<Models.Models.Airport>;
}

<h1>Details</h1>

<div>
    <h4>AirlineVM</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            airport leave
        </dt>
        <dd class = "col-sm-10">
            @{
                foreach(var i in airports)
                {
                    if (Model.AirportLeaveId == i.AirportId)
                    {
                       @i.Name;
                    }
                }
            }
        </dd>
        <dt class = "col-sm-2">
            airport arrive
        </dt>
        <dd class = "col-sm-10">
            @{
                foreach (var i in airports)
                {
                    if (Model.AirPortArriveId == i.AirportId)
                    {
                        @i.Name
                        ;
                    }
                }
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id}) |
    <a asp-action="Index">Back to List</a>
</div>
